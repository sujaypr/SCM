# AI Supply Chain Management Platform - Environment Configuration

# ================================
# DEVELOPMENT SETUP
# ================================
# Copy this file to .env and configure your settings
# DO NOT commit your actual .env file to version control

# ================================
# APPLICATION CONFIGURATION
# ================================
FASTAPI_ENV=development
SECRET_KEY=ai-supplychain-secret-key-change-in-production-2025
DEBUG=true

# ================================
# AI CONFIGURATION
# ================================
# Get your API key from: https://aistudio.google.com/app/apikey
GEMINI_API_KEY=AIzaSyANF4jNgpmO0jFTMZ5GNxyQ8PXYZWtQpec
GEMINI_MODEL=gemini-2.5-flash-lite
AI_TIMEOUT=30
AI_FALLBACK_ENABLED=true

# ================================
# DATABASE CONFIGURATION
# ================================
# Development (SQLite)
DATABASE_URL=sqlite:///ai_supplychain.db

# Production (PostgreSQL) - uncomment for production
# DATABASE_URL=postgresql://supplychain:supplychain123@localhost:5432/ai_supplychain

# Database Pool Settings
DB_POOL_SIZE=10
DB_MAX_OVERFLOW=20
SQL_ECHO=false

# ================================
# API CONFIGURATION
# ================================
API_RATE_LIMIT=100 per hour
CORS_ORIGINS=http://localhost:3000,http://127.0.0.1:3000
MAX_CONTENT_LENGTH=16777216

# ================================
# CACHE CONFIGURATION
# ================================
REDIS_URL=redis://localhost:6379/0
CACHE_TTL=3600

# ================================
# LOGGING CONFIGURATION
# ================================
LOG_LEVEL=INFO
LOG_FILE=logs/app.log

# ================================
# BUSINESS CONFIGURATION
# ================================
DEFAULT_FORECAST_PERIOD=6
MAX_FORECAST_MONTHS=12
MIN_CONFIDENCE_SCORE=0.6
DEFAULT_CURRENCY=INR
DEFAULT_TIMEZONE=Asia/Kolkata

# ================================
# FESTIVAL AND SEASONAL DATA
# ================================
FESTIVAL_DATA_SOURCE=internal
UPDATE_FESTIVAL_DATA=true

# ================================
# SECURITY CONFIGURATION
# ================================
JWT_SECRET_KEY=jwt-secret-key-change-in-production
JWT_EXPIRATION_HOURS=24

# ================================
# FILE UPLOAD CONFIGURATION
# ================================
UPLOAD_FOLDER=uploads
ALLOWED_EXTENSIONS=csv,xlsx,xls,json

# ================================
# OPTIONAL INTEGRATIONS
# ================================
# Email Configuration (Optional)
SMTP_SERVER=smtp.gmail.com
SMTP_PORT=587
SMTP_USERNAME=your_email@gmail.com
SMTP_PASSWORD=your_app_password
EMAIL_FROM=noreply@aisupplychain.com

# Weather API (Optional)
WEATHER_API_KEY=your_weather_api_key

# Economic Data API (Optional)  
ECONOMIC_DATA_API_KEY=your_economic_data_api_key

# Monitoring (Optional)
SENTRY_DSN=your_sentry_dsn
ENABLE_METRICS=false
METRICS_PORT=8000